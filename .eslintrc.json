{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": "airbnb-base",
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "import/extensions": "off",
    "no-console": "off",
    "no-unsafe-finally": "off",
    "no-unused-vars": "off",
    "no-param-reassign": "warn",
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": true
      }
    ],
    "class-methods-use-this": "off"
  },
  "plugins": ["html", "prettier"]
}
